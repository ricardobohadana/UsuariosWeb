@* Definindo a classe model desta página *@
@model List<UsuariosWeb.Presentation.Models.UsuariosConsultaModel>

@{
    ViewData["Title"] = "Consulta";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="card bg-dark text-white">
    <div class="card-body bg-secondary">
        <div class="row">
        <div class="col-md-6">
            <h2>Consulta de Usuários</h2>
            <p>Listagem de usuários cadastrados na aplicação.</p>
        </div>
        <div class="col-md-6 text-end">
            <a href="/Usuario/Relatorio" class="btn btn-outline-info">
                Gerar Relatório em PDF
            </a>
        </div>
        <hr/>
        <table id="tabela" class="table table-hover table-striped table-sm bg-secondary">
            <thead>
                <tr>
                    <th>Nome do Usuário</th>
                    <th>Email de acesso</th>
                    <th>Cadastrado em</th>
                    <th>Operações</th>
                </tr>
            </thead>
            <tbody class="">
                @foreach(var item in Model)
                {
                    <tr class="bg-secondary">
                        <td>@item.Nome</td>
                        <td>@item.Email</td>
                        <td>@item.DataCadastro.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a href="/Usuario/Edicao?id=@item.IdUsuario" class="btn btn-primary btn-sm">
                                Editar
                            </a>
                            <a href="/Usuario/Exclusao?id=@item.IdUsuario" class="btn btn-danger btn-sm" onclick="return confirm('Deseja realmente excluir o usuário @item.Nome?');">
                                Excluir
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="4">
                        Quantidade de usuários: @Model.Count
                    </td>
                </tr>
            </tfoot>
        </table>
     
    </div>
</div>



